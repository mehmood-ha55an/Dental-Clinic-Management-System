@model Invoice

<h4>Create Invoice</h4>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="row mb-3">
        <div class="col-md-4">
            <label>Invoice #</label>
            <input asp-for="InvoiceNumber" class="form-control" readonly />
        </div>
        <div class="col-md-4">
            <label>Patient Name</label>
            <input asp-for="PatientName" class="form-control" required />
        </div>
        <div class="col-md-4">
            <label>Phone</label>
            <input asp-for="Phone" class="form-control" />
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Description</th>
                <th width="80">Qty</th>
                <th width="150">Rate</th>
            </tr>
        </thead>
        <tbody id="itemsTable">
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="Items[i].Description" class="form-control" />
                    </td>
                    <td>
                        <input asp-for="Items[i].Quantity" class="form-control" />
                    </td>
                    <td>
                        <input asp-for="Items[i].UnitPrice" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <button type="button" class="btn btn-sm btn-secondary mb-2" onclick="addRow()">
        ➕ Add Item
    </button>

    <div class="row mt-4">
        <div class="col-md-4">
            <label>Discount</label>
            <input asp-for="Discount" class="form-control" />
        </div>
        <div class="col-md-4">
            <label>Paid Amount</label>
            <input asp-for="PaidAmount" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-4">
        💾 Save & Print Invoice
    </button>

</form>


@section Scripts {
    <script>
        let index = @Model.Items.Count;

        function addRow() {
            const table = document.getElementById("itemsTable");

            const row = `
            <tr>
                <td>
                    <input name="Items[${index}].Description" class="form-control" required />
                </td>
                <td>
                    <input name="Items[${index}].Quantity" type="number" value="1" class="form-control" />
                </td>
                <td>
                    <input name="Items[${index}].UnitPrice" type="number" step="0.01" class="form-control" />
                </td>
            </tr>`;

            table.insertAdjacentHTML('beforeend', row);
            index++;
        }
    </script>
}
