@using Dental_Clinic.ViewModels
@model PagedResult<Invoice>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h4 class="mb-0">
            <i class="bi bi-receipt"></i> Invoices
        </h4>
        <small class="text-muted">
            Manage billing & payments
        </small>
    </div>

    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Invoice
    </a>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">

        <form method="get" class="row g-2 align-items-center">

            <!-- Search Box -->
            <div class="col-md-4">
                <input type="text"
                       name="search"
                       value="@ViewBag.Search"
                       class="form-control"
                       placeholder="Search by patient or invoice #" />
            </div>

            <!-- Status Dropdown -->
            <div class="col-md-3">
                <select name="status" class="form-select">
                    <option value="">-- All Invoices --</option>
                    <option value="Paid"
                            selected="@(ViewBag.Status == "Paid")">
                        🟢 Paid
                    </option>
                    <option value="Unpaid"
                            selected="@(ViewBag.Status == "Unpaid")">
                        🔴 Unpaid
                    </option>
                    <option value="Partial"
                            selected="@(ViewBag.Status == "Partial")">
                        🟡 Partial
                    </option>
                </select>
            </div>

            <!-- Buttons -->
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-funnel"></i> Filter
                </button>
            </div>

            <div class="col-auto">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Reset
                </a>
            </div>

        </form>

    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">

        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th width="60">#</th>
                    <th>Patient</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Paid</th>
                    <th>Remaining</th>
                    <th>Status</th>
                    <th width="180" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Any())
                {
                    int i = (Model.PageNumber - 1) * Model.PageSize + 1;

                    foreach (var invoice in Model.Items)
                    {
                        var statusClass =
                        invoice.RemainingAmount == 0 ? "bg-success" :
                        invoice.PaidAmount == 0 ? "bg-danger" :
                        "bg-warning";

                        var statusText =
                        invoice.RemainingAmount == 0 ? "Paid" :
                        invoice.PaidAmount == 0 ? "Unpaid" :
                        "Partial";

                        <tr>
                            <td>@i</td>
                            <td>
                                <strong>@invoice.PatientName</strong>
                            </td>
                            <td>@invoice.InvoiceDate.ToString("dd MMM yyyy")</td>
                            <td><strong>PKR @invoice.TotalAmount</strong></td>
                            <td>PKR @invoice.PaidAmount</td>
                            <td>PKR @invoice.RemainingAmount</td>
                            <td>
                                <span class="badge @statusClass">
                                    @statusText
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Print"
                                   asp-route-id="@invoice.Id"
                                   target="_blank"
                                   class="btn btn-sm btn-outline-secondary"
                                   title="Print">
                                    🖨
                                </a>

                                <a asp-action="Edit"
                                   asp-route-id="@invoice.Id"
                                   class="btn btn-sm btn-outline-warning"
                                   title="Edit">
                                    ✏
                                </a>

                                <button class="btn btn-sm btn-outline-danger"
                                        title="Delete"
                                        onclick="deleteInvoice(@invoice.Id)">
                                    🗑
                                </button>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            No invoices found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- PAGINATION INFO -->
<div class="d-flex justify-content-between align-items-center mt-3">
    <div class="text-muted small">
        Showing
        @((Model.PageNumber - 1) * Model.PageSize + 1)
        -
        @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalRecords))
        of @Model.TotalRecords invoices
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav>
            <ul class="pagination mb-0">

                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { page = Model.PageNumber - 1, search = ViewBag.Search, status = ViewBag.Status })">
                        Previous
                    </a>
                </li>

                @for (int p = 1; p <= Model.TotalPages; p++)
                {
                    <li class="page-item @(p == Model.PageNumber ? "active" : "")">
                        <a class="page-link"
                           href="@Url.Action("Index", new { page = p, search = ViewBag.Search, status = ViewBag.Status })">
                            @p
                        </a>
                    </li>
                }

                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { page = Model.PageNumber + 1, search = ViewBag.Search, status = ViewBag.Status })">
                        Next
                    </a>
                </li>

            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        function deleteInvoice(id) {
            Swal.fire({
                title: 'Delete invoice?',
                text: 'This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                confirmButtonText: 'Yes, delete'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/Invoice/Delete?id=' + id, {
                        method: 'POST'
                    })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                toast: true,
                                position: 'top-end',
                                icon: 'success',
                                title: data.message,
                                showConfirmButton: false,
                                timer: 2500
                            });

                            setTimeout(() => location.reload(), 800);
                        } else {
                            Swal.fire('Error', data.message, 'error');
                        }
                    });
                }
            });
        }
    </script>
}
