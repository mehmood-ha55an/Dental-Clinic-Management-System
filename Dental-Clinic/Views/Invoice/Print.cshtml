@model Invoice

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Invoice - @Model.InvoiceNumber</title>

    <style>
        body {
            font-family: "Segoe UI", Arial, sans-serif;
            font-size: 14px;
            background: #f5f7fa;
            margin: 0;
            padding: 30px;
            color: #333;
        }

        .invoice-box {
            max-width: 900px;
            margin: auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        }

        /* HEADER */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 3px solid #0d6efd;
            padding-bottom: 15px;
            margin-bottom: 25px;
        }

        .clinic-info h2 {
            margin: 0;
            color: #0d6efd;
            font-weight: 700;
        }

        .clinic-info p {
            margin: 3px 0;
            font-size: 13px;
            opacity: 0.85;
        }

        .invoice-title {
            text-align: right;
        }

            .invoice-title h1 {
                margin: 0;
                font-size: 28px;
                letter-spacing: 1px;
                color: #333;
            }

            .invoice-title span {
                font-size: 13px;
                color: #777;
            }

        /* INFO SECTION */
        .info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 25px;
        }

            .info div {
                width: 48%;
            }

            .info p {
                margin: 5px 0;
            }

        /* TABLE */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            table thead {
                background: #0d6efd;
                color: #fff;
            }

            table th {
                padding: 10px;
                font-size: 13px;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            table td {
                padding: 10px;
                border-bottom: 1px solid #e5e5e5;
            }

            table tbody tr:last-child td {
                border-bottom: none;
            }

            table td:nth-child(2),
            table td:nth-child(3),
            table td:nth-child(4) {
                text-align: center;
            }

            table td:last-child {
                text-align: right;
            }

        /* TOTALS */
        .totals {
            width: 40%;
            margin-left: auto;
            margin-top: 10px;
        }

            .totals table {
                width: 100%;
            }

            .totals td {
                padding: 8px;
                border: none;
            }

            .totals tr td:first-child {
                text-align: left;
                color: #555;
            }

            .totals tr td:last-child {
                text-align: right;
                font-weight: 600;
            }

            .totals .grand-total td {
                font-size: 16px;
                font-weight: 700;
                border-top: 2px solid #0d6efd;
                padding-top: 10px;
            }

        /* FOOTER */
        .footer {
            margin-top: 35px;
            padding-top: 15px;
            border-top: 1px dashed #ccc;
            text-align: center;
            font-size: 13px;
            color: #777;
        }

        /* PRINT */
        @@media print {
            body {
                background: #fff;
                padding: 0;
            }

            .invoice-box {
                box-shadow: none;
                border-radius: 0;
            }

            .no-print {
                display: none;
            }
        }
    </style>
</head>
<body>

    <div class="invoice-box">

        <!-- HEADER -->
        <div class="header">
            <div class="clinic-info">
                <h2>Nouman Dental Clinic</h2>
                <p>🦷 Professional Dental Care</p>
                <p>Islamabad · Peshawar · Karachi</p>
                <p>📞 +92 300 1234567</p>
            </div>

            <div class="invoice-title">
                <h1>INVOICE</h1>
                <span>#@Model.InvoiceNumber</span>
            </div>
        </div>

        <!-- INFO -->
        <div class="info">
            <div>
                <p><strong>Patient Name:</strong> @Model.PatientName</p>
                <p><strong>Phone:</strong> @Model.Phone</p>
            </div>

            <div style="text-align:right;">
                <p><strong>Date:</strong> @Model.InvoiceDate.ToString("dd MMM yyyy")</p>
                <p><strong>Status:</strong> @(Model.RemainingAmount == 0 ? "Paid" : "Partial")</p>
            </div>
        </div>

        <!-- ITEMS -->
        <table>
            <thead>
                <tr>
                    <th>Description</th>
                    <th width="80">Qty</th>
                    <th width="120">Rate</th>
                    <th width="140">Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Description</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice</td>
                        <td>@item.Amount</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- TOTALS -->
        <div class="totals">
            <table>
                <tr>
                    <td>Sub Total</td>
                    <td>PKR @Model.SubTotal</td>
                </tr>
                <tr>
                    <td>Discount</td>
                    <td>PKR @Model.Discount</td>
                </tr>
                <tr>
                    <td>Paid Amount</td>
                    <td>PKR @Model.PaidAmount</td>
                </tr>
                <tr class="grand-total">
                    <td>Total Due</td>
                    <td>PKR @Model.RemainingAmount</td>
                </tr>
            </table>
        </div>

        <!-- FOOTER -->
        <div class="footer">
            <p>Thank you for choosing Nouman Dental Clinic</p>
            <p>This is a computer generated invoice – no signature required</p>
        </div>

    </div>

    <script>
        window.onload = function () {
            window.print();
        };
    </script>

</body>
</html>
