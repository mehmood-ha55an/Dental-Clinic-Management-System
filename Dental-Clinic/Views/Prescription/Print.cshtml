@model Prescription

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Prescription</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 14px;
        }

        .box {
            max-width: 800px;
            margin: auto;
            border: 1px solid #000;
            padding: 20px;
        }

        .header {
            text-align: center;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
            margin-bottom: 15px;
        }

            .header h2 {
                margin: 0;
            }

        .section-title {
            font-weight: bold;
            margin-top: 15px;
            border-bottom: 1px solid #000;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

            table th, table td {
                border: 1px solid #000;
                padding: 6px;
            }

        .signature {
            margin-top: 40px;
            text-align: right;
        }

        @@media print {
            .no-print

        {
            display: none;
        }

        }
    </style>
</head>
<body>

    <div class="box">

        <!-- Clinic Header -->
        <div class="header">
            <h2>Nouman Dental Clinic</h2>
            <p>Dental & Oral Care</p>
        </div>

        <!-- Patient Info -->
        <p><strong>Patient:</strong> @Model.Appointment.PatientName</p>
        <p><strong>Appointment Date:</strong> @Model.Appointment.AppointmentDate.ToString("dd-MMM-yyyy")</p>
        <p><strong>Doctor:</strong> @Model.DoctorName</p>

        <!-- Medicines -->
        <div class="section-title">℞ Prescription</div>

        <table>
            <thead>
                <tr>
                    <th>Medicine</th>
                    <th>Dosage</th>
                    <th>Duration</th>
                    <th>Instructions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.MedicineName</td>
                        <td>@item.Dosage</td>
                        <td>@item.Duration</td>
                        <td>@item.Instructions</td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!string.IsNullOrWhiteSpace(Model.Notes))
        {
            <div class="section-title">Notes</div>
            <p>@Model.Notes</p>
        }

        <div class="signature">
            <p><strong>@Model.DoctorName</strong></p>
            <p>Signature: ____________</p>
        </div>

    </div>

    <div class="text-center mt-3 no-print">
        <button onclick="window.print()">Print</button>
    </div>

</body>
</html>


<script>
    window.onload = function () {
        window.print();
    };
</script>
