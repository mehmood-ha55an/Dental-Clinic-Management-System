@model Appointment

<div class="card shadow-sm">
    <div class="card-header bg-warning">
        <h5 class="mb-0">
            <i class="bi bi-pencil-square"></i>
            Edit Appointment
        </h5>
    </div>

    <div class="card-body">

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Patient Name</label>
                    <input asp-for="PatientName" class="form-control" />
                </div>

                <div class="col-md-4 mb-3">
                    <label class="form-label">Phone / WhatsApp</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Branch</label>
                    <select asp-for="Branch"
                            asp-items="@(new SelectList(ViewBag.Branches))"
                            class="form-select"
                            required>
                        <option value="">-- Select Branch --</option>
                    </select>
                    <span asp-validation-for="Branch" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Appointment Date</label>
                    <input asp-for="AppointmentDate" type="date" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Appointment Time</label>
                    <input asp-for="AppointmentTime" type="time" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">WhatsApp Message / Reason</label>
                <textarea asp-for="Message" class="form-control" rows="4"></textarea>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="List" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Update
                </button>
            </div>
        </form>

    </div>
</div>



