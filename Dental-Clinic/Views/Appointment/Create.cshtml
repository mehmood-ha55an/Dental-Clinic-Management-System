@model Appointment

<div class="row">
    <div class="col-lg-8">

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-plus"></i>
                    Add Appointment
                </h5>
            </div>

            <div class="card-body">

                <form asp-action="Create" method="post">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Patient Name</label>
                            <input asp-for="PatientName" class="form-control" placeholder="Enter patient name" />
                            <span asp-validation-for="PatientName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Phone / WhatsApp</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+92XXXXXXXXXX" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Appointment Date</label>
                            <input asp-for="AppointmentDate" type="date" class="form-control" />
                        </div>

                        <div class="col-md-4 mb-3">
                            <label class="form-label">Appointment Time</label>
                            <input asp-for="AppointmentTime" type="time" class="form-control" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Branch</label>
                            <select asp-for="Branch"
                                    asp-items="@(new SelectList(ViewBag.Branches))"
                                    class="form-select"
                                    required>
                                <option value="">-- Select Branch --</option>
                            </select>
                            <span asp-validation-for="Branch" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="mb-3">
                        <label class="form-label">WhatsApp Message / Reason</label>
                        <textarea asp-for="Message" class="form-control" rows="4"
                                  placeholder="Paste WhatsApp message here..."></textarea>
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save"></i>
                            Save Appointment
                        </button>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>



