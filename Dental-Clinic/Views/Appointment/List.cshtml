@using Dental_Clinic.ViewModels
@model PagedResult<Dental_Clinic.Models.Appointment>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h4 class="mb-0">
            <i class="bi bi-calendar-check"></i> Appointments
        </h4>
        <small class="text-muted">
            Manage patient appointments
        </small>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">

        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Patient</th>
                    <th>Phone</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Message</th>
                    <th>Branch</th>
                    <th>Status</th>
                    <th width="200" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Any())
                {
                    foreach (var item in Model.Items)
                    {
                        var statusClass =
                        item.Status == "Completed" ? "bg-success" :
                        item.Status == "Cancelled" ? "bg-danger" :
                        "bg-warning";

                        <tr>
                            <td>
                                <strong>@item.PatientName</strong>
                            </td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.AppointmentDate.ToString("dd MMM yyyy")</td>
                            <td>@DateTime.Today.Add(item.AppointmentTime).ToString("hh:mm tt")</td>
                            <td style="max-width:220px;" class="text-truncate">
                                @item.Message
                            </td>
                            <td>
                                <span class="badge bg-info">
                                    @item.Branch
                                </span>
                            </td>
                            <td>
                                <span class="badge @statusClass">
                                    @item.Status
                                </span>
                            </td>
                            <td class="text-center">
                                <a href="/Prescription/Create?appointmentId=@item.Id"
                                   class="btn btn-sm btn-outline-info"
                                   title="Create Prescription">
                                    💊
                                </a>

                                <button class="btn btn-sm btn-outline-success"
                                        title="Mark Completed"
                                        onclick="updateStatus(@item.Id, 'Completed')">
                                    ✔
                                </button>

                                <button class="btn btn-sm btn-outline-danger"
                                        title="Cancel"
                                        onclick="updateStatus(@item.Id, 'Cancelled')">
                                    ✖
                                </button>

                                <a asp-action="Edit"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-warning"
                                   title="Edit">
                                    ✏
                                </a>

                                <button class="btn btn-sm btn-outline-danger"
                                        title="Delete"
                                        onclick="deleteAppointment(@item.Id)">
                                    🗑
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            No appointments found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- PAGINATION -->
<div class="d-flex justify-content-between align-items-center mt-3">
    <div class="text-muted small">
        Showing
        @((Model.PageNumber - 1) * Model.PageSize + 1)
        -
        @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalRecords))
        of @Model.TotalRecords appointments
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav>
            <ul class="pagination mb-0">

                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="@Url.Action("List", new { page = Model.PageNumber - 1 })">
                        Previous
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link"
                           href="@Url.Action("List", new { page = i })">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       href="@Url.Action("List", new { page = Model.PageNumber + 1 })">
                        Next
                    </a>
                </li>

            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        function deleteAppointment(id) {
            Swal.fire({
                title: 'Delete appointment?',
                text: 'This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                confirmButtonText: 'Yes, delete'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/Appointment/Delete?id=' + id, {
                        method: 'POST'
                    })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            Toast.fire({
                                icon: 'success',
                                title: data.message
                            });
                            setTimeout(() => location.reload(), 800);
                        } else {
                            Toast.fire({
                                icon: 'error',
                                title: data.message
                            });
                        }
                    });
                }
            });
        }

        function updateStatus(id, status) {
            fetch(`/Appointment/UpdateStatus?id=${id}&status=${status}`, {
                method: 'POST'
            })
            .then(r => r.json())
            .then(res => {
                if (res.success) {
                    Toast.fire({
                        icon: 'success',
                        title: 'Status updated'
                    });
                    setTimeout(() => location.reload(), 800);
                }
            });
        }
    </script>
}
